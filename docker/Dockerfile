FROM node:20 AS builder

WORKDIR /app
COPY ./package.json .
COPY ./yarn.lock .
RUN yarn install --frozen-lockfile

# 
ARG NETWORK_ID=1029
ARG NETWORK_NAME=Conflux Core
ARG SCAN_BACKEND_API=https://www.confluxscan.io
# CORE_MAINNET CORE_TESTNET or CORE_DEVNET
ARG NETWORK_TYPE=CORE_MAINNET
ARG OPEN_API_HOST=https://api.confluxscan.io
ARG RPC_SERVER=https://main.confluxrpc.com
ARG FC_ADDRESS=cfx:achc8nxj7r451c223m18w2dwjnmhkd6rxawrvkvsy2
ARG FC_EXCHANGE_ADDRESS=cfx:acdrd6ahf4fmdj6rgw4n9k4wdxrzfe6ex6jc7pw50m
ARG FC_EXCHANGE_INTEREST_ADDRESS=cfx:acag8dru4527jb1hkmx187w0c7ymtrzkt2schxg140
ARG ENS_REGISTRY_ADDRESS=cfx:acemru7fu1u8brtyn3hrtae17kbcd4pd9uwbspvnnm
ARG ENS_PUBLIC_RESOLVER_ADDRESS=cfx:acasaruvgf44ss67pxzfs1exvj7k2vyt863f72n6up
ARG LOGO=

ENV REACT_APP_NETWORK_ID=$NETWORK_ID
ENV REACT_APP_NETWORK_NAME=$NETWORK_NAME
ENV REACT_APP_SCAN_BACKEND_API=$SCAN_BACKEND_API
ENV REACT_APP_NETWORK_TYPE=$NETWORK_TYPE
ENV REACT_APP_OPEN_API_HOST=$OPEN_API_HOST
ENV REACT_APP_RPC_SERVER=$RPC_SERVER
ENV REACT_APP_FC_ADDRESS=$FC_ADDRESS
ENV REACT_APP_FC_EXCHANGE_ADDRESS=$FC_EXCHANGE_ADDRESS
ENV REACT_APP_ENS_REGISTRY_ADDRESS=$ENS_REGISTRY_ADDRESS
ENV REACT_APP_FC_EXCHANGE_INTEREST_ADDRESS=$FC_EXCHANGE_INTEREST_ADDRESS
ENV REACT_APP_ENS_PUBLIC_RESOLVER_ADDRESS=$ENS_PUBLIC_RESOLVER_ADDRESS
ENV REACT_APP_LOGO=$LOGO



COPY . .

RUN node ./docker/setupEnv.mjs
RUN yarn build

FROM nginx:1-alpine

COPY --from=builder /app/docker/nginx.conf /etc/nginx/nginx.conf

COPY --from=builder /app/build /var/www/sirius/build

